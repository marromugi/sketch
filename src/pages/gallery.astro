---
import Layout from '../layouts/Layout.astro';

const shaders = [
  { path: "/shader", name: "shader", screenshot: "/screenshots/shader.png" },
  { path: "/grain-gradient", name: "grain-gradient", screenshot: "/screenshots/grain-gradient.png" },
  { path: "/tube-gradient", name: "tube-gradient", screenshot: "/screenshots/tube-gradient.png" },
];
---

<Layout>
  <div class="grid">
    {shaders.map((shader) => (
      <a href={shader.path}>
        <img src={shader.screenshot} alt={shader.name} />
      </a>
    ))}
  </div>
</Layout>

<style>
  .grid {
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: 120px;
    gap: 8px;
    padding: 1em;
  }

  @media (min-width: 640px) {
    .grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  a {
    display: block;
    line-height: 0;
    border-radius: 1em;
    overflow: hidden;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
</style>
